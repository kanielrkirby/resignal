---
const icons = await Astro.glob('../../icons/*.svg');
---

<div class="bg-neutral-800 flex flex-col gap-8 text-white">
  {icons.map((icon) => {
    console.log(icon);
    return (
      <div class="flex items-center gap-4">
        <span class="text-xl">{
          icon.default.src.split("/").pop().split(".")[0]
        }</span>
        <img src={`${icon.default.src}`} alt="" class="w-12"/>
      </div>
    )
  })}
</div>
